{
  "compilerOptions": {
    "target": "es2020",
    "lib": [ "es2020" ],
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./node_modules",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "**/*.spec.ts"
  ]
}